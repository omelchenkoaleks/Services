<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainChildBackground"
    android:padding="16dp"
    tools:context="._002_service_lifecycle.ServiceLifecycleActivity">

    <Button
        android:id="@+id/start_service_lifecycle_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/start_service"
        android:onClick="serviceLifecycleOnClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/stop_service_lifecycle_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/stop_service"
        android:onClick="serviceLifecycleOnClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_service_lifecycle_button" />

</androidx.constraintlayout.widget.ConstraintLayout>